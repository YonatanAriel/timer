{
  "name": "timer",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -n VITE,ESB1,ESB2,EL \"vite\" \"esbuild electron/main.ts --bundle --platform=node --external:electron --outfile=electron/main.cjs --watch\" \"esbuild electron/preload.ts --bundle --platform=node --external:electron --outfile=electron/preload.js --watch\" \"wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electronmon .\"",
    "build:ui": "vite build",
    "build:electron": "esbuild electron/main.ts --bundle --platform=node --external:electron --outfile=electron/main.cjs && esbuild electron/preload.ts --bundle --platform=node --external:electron --outfile=electron/preload.js",
    "build": "npm run build:ui && npm run build:electron",
    "start": "cross-env NODE_ENV=production electron .",
    "pack": "npm run build && electron-builder",
    "pack:win": "npm run build && electron-builder --win"
  },
  "devDependencies": {
    "@rollup/rollup-win32-x64-msvc": "^4.46.2",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^36.8.0",
    "electronmon": "^2.0.3",
    "esbuild": "^0.25.9",
    "electron-builder": "^24.13.3",
    "lightningcss-win32-x64-msvc": "^1.30.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "@tailwindcss/oxide-win32-x64-msvc": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.0.0",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "build": {
    "appId": "com.yonatan.timer",
    "productName": "20 20 20 Timer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "!electron/*.ts",
      "package.json",
      "!stubs/**"
    ],
    "win": {
      "artifactName": "${productName}-Setup-${version}-${arch}.exe",
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build-resources/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-Setup-${version}-${arch}.exe"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}-${arch}.exe"
    }
  },
  "overrides": {
    "@electron/get": "2.0.3",
    "@electron/get@2.0.3": {
      "global-agent": "file:stubs/global-agent"
    }
  }
}
